<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/filaofchicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FilaOfChicken"/>

    <Button
        android:id="@+id/Fries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Fries"/>

    <Button
        android:id="@+id/Nuggets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Nuggets"/>

    <Button
        android:id="@+id/ChickenSandwhich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ChickenSandwhich"/>

    <Button
        android:id="@+id/Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Drinks"/>

    <Button
        android:id="@+id/Sauces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sauces"/>


</LinearLayout>